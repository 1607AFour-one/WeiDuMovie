<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/item_shape"
        >

        <ImageView
            android:id="@+id/Cinema_Image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"


            />
        <TextView
            android:id="@+id/Cinema_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大地影院"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/Cinema_Image"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/Cinema_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海淀区岳雪莲"
            android:textSize="12sp"
            android:textColor="#333333"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_toRightOf="@+id/Cinema_Image"
            android:layout_below="@+id/Cinema_Name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/Cinema_Km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0km"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/Cinema_Image"
            android:layout_below="@+id/Cinema_Address"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>

</RelativeLayout>
