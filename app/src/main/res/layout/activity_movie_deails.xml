<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MovieDeailsActivity"
    android:background="@mipmap/dianyingbeijing1"
    android:id="@+id/deails_rela">
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/com_icon_movie_default"/>
        <CheckBox
            android:id="@+id/movie_follow_cb"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:button="@null"
            android:background="@drawable/select_collection"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />
    <TextView
        android:id="@+id/detail_name"
        android:layout_above="@id/detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="片名"/>
    <RelativeLayout
        android:layout_below="@id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/detail_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/detail_rb"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:background="@drawable/deatil_shape"
                    android:button="@null"
                    android:textColor="@color/white"
                    android:text="详情"/>
                <RadioButton
                    android:id="@+id/trailer_rb"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/deatil_shape"
                    android:button="@null"
                    android:textColor="@color/white"
                    android:text="预告"/>
                <RadioButton
                    android:id="@+id/still_rb"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:background="@drawable/deatil_shape"
                    android:button="@null"
                    android:textColor="@color/white"
                    android:text="剧照"/>
                <RadioButton
                    android:id="@+id/comments_rb"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/deatil_shape"
                    android:button="@null"
                    android:textColor="@color/white"
                    android:text="影评"/>
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/detail_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:src="@mipmap/com_icon_my_fanhui"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/detail_by_card"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/goupiao_shape"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        android:gravity="center"
        android:elevation="4dp"
        android:text="购票"/>





</RelativeLayout>