<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/home_group_relay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/dianyingbeijing2">
        <RelativeLayout
            android:id="@+id/home_group_relay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/home_group_dingwei_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:src="@mipmap/com_icon_loc_white_default"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_toRightOf="@id/home_group_dingwei_image"
                android:layout_centerVertical="true"
                android:text="北京"/>

        </RelativeLayout>
        <recycler.coverflow.RecyclerCoverFlow
            android:layout_below="@+id/home_group_relay"
            android:id="@+id/home_group_recyflow"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </recycler.coverflow.RecyclerCoverFlow>


    </RelativeLayout>
    <View
        android:layout_below="@id/home_group_relay2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#666666"/>



</RelativeLayout>
