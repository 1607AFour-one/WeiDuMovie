<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailsActivity"
    android:id="@+id/details">

    <RelativeLayout
        android:id="@+id/home_group_relay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/dianyingbeijing2">

        <RelativeLayout
            android:id="@+id/home_group_relay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_group_dingwei_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/Text_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/home_group_dingwei_image"
                android:text="电影院"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Text_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Text_Name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/home_group_dingwei_image"
                android:text="电影院详细地址"
                android:textColor="#fff"
                android:textSize="12sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/Ding"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@mipmap/com_icon_navigation_default"
            />
        <recycler.coverflow.RecyclerCoverFlow
            android:id="@+id/home_group_recyflow"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/home_group_relay"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="24dp">
        </recycler.coverflow.RecyclerCoverFlow>

    </RelativeLayout>

    <View
        android:id="@+id/View"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/home_group_relay2"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#666666" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Time_Xrecy"
        android:layout_below="@+id/View"
        ></android.support.v7.widget.RecyclerView>



    <ImageView
        android:id="@+id/FanHui"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/com_icon_my_fanhui" />

</RelativeLayout>