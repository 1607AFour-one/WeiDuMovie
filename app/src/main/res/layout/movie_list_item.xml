<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/dianyingbeijing4">

        </ImageView>

        <ImageView
            android:id="@+id/movie_image"
            android:layout_width="103dp"
            android:layout_height="123dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/log_icon_phone_default" />

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/movie_image">

            <RelativeLayout
                android:id="@+id/relative_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="胡桃夹子和四个王国"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/movie_dianzan"
                    android:button="@null"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/com_icon_collection_default"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/movie_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_layout1"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="啦啦啦啦啦啦阿拉啊啊拉拉啊啦啦啦啦啦啦阿拉啊啊拉拉啊"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
