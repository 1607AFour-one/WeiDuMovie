<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    >

    <TextView
        android:id="@+id/to_pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="选择支付方式"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pop_to_pay_type_back"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        android:scaleType="center"
        android:src="@mipmap/com_icon_down_default"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wechat_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pay_icon_weixin_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_pay_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:text="微信支付"
        android:textColor="#000"
        android:textSize="16sp"
        android:id="@+id/wechat_text"
        app:layout_constraintLeft_toRightOf="@+id/wechat_ic"
        app:layout_constraintTop_toBottomOf="@+id/to_pay_type" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="37dp"
        android:id="@+id/pop_wechat_rb"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pop_to_pay_type_back" />
    <ImageView
        android:id="@+id/pay_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pay_icon_zhifubao_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wechat_ic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="19dp"
        android:text="支付宝支付"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/pay_ic"
        app:layout_constraintTop_toBottomOf="@+id/wechat_text" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="37dp"
        android:id="@+id/pop_pay_rb"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pop_wechat_rb" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="支付"
        android:background="#e4ad3e"
        android:gravity="center"
        android:id="@+id/pop_to_pay_btn"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/pop_pay_rb"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>
