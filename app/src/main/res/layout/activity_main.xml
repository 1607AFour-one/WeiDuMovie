<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@mipmap/bitmap">
    <EditText
        android:id="@+id/login_ed_phone"
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@mipmap/log_icon_phone_default"
        android:drawablePadding="20dp"
        android:hint="手机号"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:layout_marginRight="30dp"/>
    <EditText
        android:id="@+id/login_ed_pwd"
        android:layout_below="@id/login_ed_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@mipmap/log_icon_lock_default"
        android:drawablePadding="20dp"
        android:hint="登录密码"
        android:textColor="#fff"
        android:textColorHint="#fff"/>

    <RelativeLayout
        android:id="@+id/login_lin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_ed_pwd"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/login_cb_rember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码" />

        <CheckBox
            android:id="@+id/login_cb_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/login_cb_rember"
            android:text="自动登录" />

        <TextView
            android:id="@+id/regist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:text="快速登录"
            android:textColor="#fff" />


    </RelativeLayout>

    <Button
        android:layout_below="@id/login_lin1"
        android:id="@+id/login_btn_login"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:text="登录"/>
    <LinearLayout
        android:id="@+id/login_lin"
        android:layout_below="@id/login_btn_login"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:id="@+id/login_view1"
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/login_sanfang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:text="第三方账号快速的登录"/>
        <View
            android:id="@+id/login_view2"
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:background="#ffffff"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/login_image_weixin"
        android:layout_below="@+id/login_lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/log_icon_weixin_default"/>


</RelativeLayout>